<!DOCTYPE html>
<html>
<head>
	<title></title>
<style >
	.myForm {
  min-width: 500px;
  position: absolute;
  text-align: left;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 1.5rem
}
@media (max-width: 500px) {
  .myForm {
    min-width: 90%;
  }
}
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

<div class="container">

        <h3 style="background-color: skyblue; padding: 5px">rm_Phonebook</h3>
    

  <form class="myForm" method="get" action="/" style="border: solid;"  >
    <div class="form-group" style="padding-left:  12px; padding-right: 12px;margin-top: 15px;">
      <input style="width: 90%; display: inline" class="form-control input-lg " type="Search" name="search" id="Search" placeholder="Search" />
	
      <button type="submit">
		 <span class="glyphicon glyphicon-search"></span>
	  </button>
    </div>
	<% for(let i=0;i<records.length;i++){ %>
    <div style="border: solid; margin: 2% 2% 2% 2%;">
	    <details>
	      <summary><%= records[i].name %></summary>
	      <div>
	        <span><%= records[i].DoB %></span>
			  <span style="float: right"><a href="/<%= records[i]._id %>/edit/"><button type="button" class="btn btn-primary">EDIT</button></a>  <a href="/<%= records[i]._id %>/delete/"><button type="button" class="btn btn-danger">DELETE</button></a></span>
	      </div>
	      <div style="border: solid 1px black;  margin: 4% 2% 2% 2%;">
	      		<div style="padding-top: 3%; padding-bottom: 3%">
	      		  <div style="display: inline;">
				  		<span class="glyphicon glyphicon-earphone"></span>
				  		<%= records[i].phoneNo %>
				  </div>
				  <div style="float: right;">

				  		<span class="glyphicon glyphicon-envelope"></span> 
				  		<%= records[i].email %>
				  </div> 
				</div>
	      </div>
	    </details>
	</div>
	<% } %>

    <div class="text-center"> 
    <ul class="pagination">
      <li class="page-item"><a class="page-link" href="#"><<</a></li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item"><a class="page-link" href="#">>></a></li>
    </ul>
    <div style="float: right; padding-top: 6%; padding-right: 3%">
    		<a href="/new">
    				<span class="glyphicon glyphicon-plus-sign glyphicon-lg"></span>
    		</a>
	</div>
    </div>
    
  </form>


</div>
</body>
</html>